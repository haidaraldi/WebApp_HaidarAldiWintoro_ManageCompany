@model WebApp_HaidarAldiWintoro_ManageCompany.ViewModels.Master.MasterCompanyViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-header">
        <h3 class="text-uppercase">Edit Company</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="CompaniesVM.Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CompaniesVM.Name" class="control-label"></label>
                        <input asp-for="CompaniesVM.Name" class="form-control" />
                        <span asp-validation-for="CompaniesVM.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CompaniesVM.CompanyLogo" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="CompaniesVM.CompanyLogo" class="custom-file-input" />
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="CompaniesVM.CompanyLogo" class="text-danger"></span>
                        <img src="@FileLocation.RetriveFileFromFolder@Model.CompaniesVM.ExistingImage" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CompaniesVM.Email" class="control-label"></label>
                        <input asp-for="CompaniesVM.Email" type="email" class="form-control" />
                        <span asp-validation-for="CompaniesVM.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CompaniesVM.Website" class="control-label"></label>
                        <input asp-for="CompaniesVM.Website" type="url" class="form-control" />
                        <span asp-validation-for="CompaniesVM.Website" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-sm btn-info rounded-0"><i class="fa fa-pencil-alt"></i> Update</button>
                <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-fast-backward"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
