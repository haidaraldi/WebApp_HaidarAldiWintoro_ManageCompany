<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manage Company</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/jquery-ui-1.12.1/jquery-ui.min.css" />
    <!--datatables.net-->
    <link rel="stylesheet" href="~/lib/DataTables/datatables.min.css" />
    <!--toastr-->
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <!--sweetalert-->
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert.css" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Manage Company</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Companies" asp-action="Index">Companies</a></li>
                <li><a asp-controller="Employee" asp-action="Index">Employees</a></li>
            </ul>
            <partial name="_LoginPartial" />

        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Manage Company - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--jqueryUI-->
    <script src="~/lib/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <!--datatables.net-->
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <!--serializeJSON-->
    <script src="~/lib/marioizquierdo-jquery.serializeJSON/jquery.serializejson.min.js"></script>
    <!--toastr-->
    <script src="~/lib/toastr/toastr.min.js"></script>
    <!--sweetalert-->
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<style>
    .card {
        border: 1px solid #ccc;
        background-color: #f4f4f4;
        padding: 20px;
        margin-bottom: 10px;
    }
</style>
